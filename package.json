{
  "name": "react-just-ui",
  "description": "UI components library for react.",
  "version": "0.3.3",
  "author": "Sergey <itsib.su@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itsib/react-just-ui.git"
  },
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./select": {
      "types": "./dist/components/select/index.d.ts",
      "default": "./dist/components/select/index.js"
    },
    "./checkbox": {
      "types": "./dist/components/checkbox/index.d.ts",
      "default": "./dist/components/checkbox/index.js"
    },
    "./input": {
      "types": "./dist/components/input/index.d.ts",
      "default": "./dist/components/input/index.js"
    },
    "./otp-input": {
      "types": "./dist/components/otp-input/index.d.ts",
      "default": "./dist/components/otp-input/index.js"
    },
    "./radio": {
      "types": "./dist/components/radio/index.d.ts",
      "default": "./dist/components/radio/index.js"
    },
    "./switch": {
      "types": "./dist/components/switch/index.d.ts",
      "default": "./dist/components/switch/index.js"
    },
    "./textarea": {
      "types": "./dist/components/textarea/index.d.ts",
      "default": "./dist/components/textarea/index.js"
    },
    "./image": {
      "types": "./dist/components/image/index.d.ts",
      "default": "./dist/components/image/index.js"
    },
    "./validators": {
      "types": "./dist/validators/index.d.ts",
      "default": "./dist/validators/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    },
    "./styles.css": "./dist/css/styles.css",
    "./themes/*.css": "./dist/themes/*.css",
    "./package.json": "./package.json"
  },
  "scripts": {
    "start": "node scripts/start.cjs",
    "build": "npm run build:lib && npm run build:doc",
    "build:lib": "vite build --mode production && tsc --emitDeclarationOnly --noEmit false",
    "build:doc": "api-extractor run --local --verbose",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.47.6",
    "@types/node": "^20.14.12",
    "@types/postcss-import": "^14.0.3",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "glob": "^11.0.0",
    "postcss": "^8.4.40",
    "postcss-import": "^16.1.0",
    "postcss-nesting": "^12.1.5",
    "typescript": "5.4.2",
    "vite": "^5.4.2",
    "vite-plugin-dts": "^4.0.3",
    "vite-plugin-lib-inject-css": "^2.1.1",
    "vitest": "^2.0.5"
  },
  "overrides": {
    "glob": "^11.0.0"
  }
}
