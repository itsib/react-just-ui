{
  "name": "react-just-ui",
  "description": "A library for frequently used widgets and form elements and interfaces.",
  "version": "0.2.9",
  "author": "Sergey <itsib.su@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itsib/react-just-ui.git"
  },
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./validators": {
      "import": {
        "types": "./dist/validators.d.ts",
        "default": "./dist/validators.js"
      },
      "require": {
        "types": "./dist/validators.d.ts",
        "default": "./dist/validators.cjs"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/utils.d.ts",
        "default": "./dist/utils.js"
      },
      "require": {
        "types": "./dist/utils.d.ts",
        "default": "./dist/utils.cjs"
      }
    },
    "./styles": "./dist/index.css",
    "./theme-default": "./dist/css/default.css"
  },
  "scripts": {
    "start": "node scripts/start.cjs",
    "build": "npm run build:lib && npm run build:types && npm run build:doc",
    "build:lib": "vite build",
    "build:types": "tsc --emitDeclarationOnly --noEmit false --declaration true",
    "build:doc": "node scripts/extractor.cjs",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17 || ^18 || ^19",
    "react-dom": "^16.8.0 || ^17 || ^18 || ^19"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.47.6",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "postcss": "^8.4.40",
    "postcss-nesting": "^12.1.5",
    "typescript": "5.4.2",
    "vite": "^5.3.5",
    "vite-dts": "^1.0.4",
    "vitest": "^2.0.4"
  }
}
