{
  "name": "react-just-ui",
  "description": "UI components library for react.",
  "version": "0.4.2",
  "author": "Sergey <itsib.su@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itsib/react-just-ui.git"
  },
  "license": "ISC",
  "private": false,
  "type": "module",
  "scripts": {
    "watch:build": "tsx plugins/watch-build.ts",
    "watch:storybook": "tsx plugins/watch-storybook.ts",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npm run build:types && npm run build:lib",
    "build:types": "tsc --emitDeclarationOnly --noEmit false --declaration true",
    "build:lib": "NODE_ENV='production' vite build --mode production",
    "build:storybook": "storybook build",
    "lint": "eslint .",
    "test": "vitest run",
    "postinstall": "tsx plugins/patch-deps.ts",
    "preversion": "npm run lint && npm test",
    "postversion": "git push && git push --tags",
    "storybook": "storybook dev --exact-port --port 6060 --disable-telemetry --no-open"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^2.0.2",
    "@eslint/js": "^9.11.1",
    "@storybook/addon-controls": "^8.3.4",
    "@storybook/addon-essentials": "^8.3.4",
    "@storybook/addon-interactions": "^8.3.4",
    "@storybook/addon-links": "^8.3.4",
    "@storybook/addon-themes": "^8.3.4",
    "@storybook/blocks": "^8.3.4",
    "@storybook/components": "^8.3.4",
    "@storybook/icons": "^1.2.12",
    "@storybook/manager-api": "^8.3.4",
    "@storybook/react": "^8.3.4",
    "@storybook/react-vite": "^8.3.4",
    "@storybook/test": "^8.3.4",
    "@storybook/theming": "^8.3.4",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "eslint": "^9.11.1",
    "eslint-plugin-perfectionist": "^3.7.0",
    "glob": "^11.0.0",
    "globals": "^15.9.0",
    "react-hook-form": "^7.53.0",
    "react-just-ui": "file:./",
    "sass-embedded": "^1.79.4",
    "storybook": "^8.3.4",
    "tsx": "^4.19.1",
    "typescript": "5.6.2",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.8",
    "vite-plugin-cp": "^4.0.8",
    "vite-plugin-lib-inject-css": "^2.1.1",
    "vitest": "^2.1.1"
  },
  "overrides": {
    "glob": "^11.0.0",
    "jsonfile": {
      ".": "^6.1.0"
    }
  }
}
