{
  "name": "react-just-ui",
  "description": "UI components library for react.",
  "version": "0.3.6",
  "author": "Sergey <itsib.su@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itsib/react-just-ui.git"
  },
  "license": "ISC",
  "private": false,
  "type": "module",
  "scripts": {
    "clean": "rm -rf ./dist",
    "start": "vite-node --config scripts/vite.config.mts scripts/start.mts",
    "build": "npm run clean && npm run build:types && npm run build:lib",
    "build:types": "tsc --emitDeclarationOnly --noEmit false --declaration true",
    "build:lib": "vite build --mode production",
    "build:doc": "api-extractor run --local --verbose",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.47.6",
    "@types/node": "^20.14.12",
    "@types/postcss-import": "^14.0.3",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "postcss": "^8.4.45",
    "postcss-import": "^16.1.0",
    "postcss-nesting": "^12.1.5",
    "postcss-variable-compress": "^3.0.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.3",
    "vite-bundle-analyzer": "^0.10.6",
    "vite-plugin-lib-inject-css": "^2.1.1",
    "vitest": "^2.0.5"
  },
  "overrides": {
    "glob": "^11.0.0"
  }
}
