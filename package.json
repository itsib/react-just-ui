{
  "name": "react-just-ui",
  "description": "UI components library for react.",
  "version": "0.3.5",
  "author": "Sergey <itsib.su@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itsib/react-just-ui.git"
  },
  "license": "ISC",
  "private": false,
  "type": "module",
  "scripts": {
    "clean": "rm -rf ./dist",
    "start": "vite-node --config scripts/vite.config.mts scripts/start.mts",
    "build": "npm run clean && npm run build:types && npm run build:lib",
    "build:types": "tsc --emitDeclarationOnly --noEmit false --declaration true",
    "build:lib": "vite build --mode production",
    "build:doc": "api-extractor run --local --verbose",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-typescript": "^7.24.7",
    "@microsoft/api-extractor": "^7.47.6",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@rollup/pluginutils": "^5.1.0",
    "@types/node": "^20.14.12",
    "@types/postcss-import": "^14.0.3",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.6",
    "esbuild": "^0.23.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "glob": "^11.0.0",
    "magic-string": "^0.30.11",
    "postcss": "^8.4.45",
    "postcss-import": "^16.1.0",
    "postcss-nesting": "^12.1.5",
    "rollup": "^4.21.2",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-ts": "^3.4.5",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.3",
    "vite-plugin-dts": "^4.0.3",
    "vite-plugin-lib-inject-css": "^2.1.1",
    "vitest": "^2.0.5"
  },
  "overrides": {
    "glob": "^11.0.0"
  }
}
